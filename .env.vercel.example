# ========================================
# Vercel Deployment Environment Variables
# ========================================
# Add these to your Vercel Project Settings

# ======== Frontend (Vite) ========
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_APP_ID=your_app_id

# Backend API URL (automatically set to Vercel domain)
VITE_BACKEND_URL=https://your-app.vercel.app/api

# Stripe (Frontend - Publishable Key)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ======== Backend (Express/Node.js) ========

# Firebase Admin SDK (Base64 encoded JSON)
# To encode: cat firebase-adminsdk.json | base64
FIREBASE_ADMIN_SDK_KEY=eyJkYXRhYmFzZV91cmwiOiAi...

# Stripe (Backend - Secret Key)
STRIPE_SECRET_KEY=sk_test_your_secret_key

# Server Settings
NODE_ENV=production
PORT=3000

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://your-app.vercel.app,https://www.your-app.vercel.app

# ======== Optional ========

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
